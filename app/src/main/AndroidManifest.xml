<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigdrum.metronomemate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bigdrum.metronomemate.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                <activity
            android:name="com.bigdrum.metronomemate.ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.bigdrum.metronomemate.ui.setlistmanagement.SongListActivity"
            android:label="@string/title_activity_song_list" >
        </activity>
        <activity
            android:name="com.bigdrum.metronomemate.ui.setlistmanagement.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.bigdrum.metronomemate.ui.setlistmanagement.ViewSetlistActivity"
            android:label="@string/title_activity_view_setlist"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.bigdrum.metronomemate.ui.setlistmanagement.AddSetlistActivity"
            android:label="@string/title_activity_add_setlist" >
        </activity>
        <activity
            android:name="com.bigdrum.metronomemate.ui.setlistmanagement.EnterSongDetails"
            android:label="@string/title_activity_enter_song_details" >
        </activity>
        <activity
            android:name="com.bigdrum.metronomemate.ui.setlistmanagement.SelectSetlist"
            android:label="@string/title_activity_select_setlist" >
        </activity>
    </application>

</manifest>
