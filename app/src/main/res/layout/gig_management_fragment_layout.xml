<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical" >

    <!--TextView
        android:id="@+id/no_gigs_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/help_no_gigs" /-->

    <TextView
        android:id="@+id/gig_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/gig_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"/>

    <ListView
        android:id="@+id/gig_listview"
        android:layout_width="match_parent"
        android:layout_height="200dp" >
    </ListView>

    <TextView
        android:id="@+id/gig_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/gig_details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"/>

    <EditText
        android:id="@+id/gig_details_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.95"
        android:ems="10"
        android:enabled="false"
        android:textColor="#000000"
        android:textStyle="bold"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <!--
